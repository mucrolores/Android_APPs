<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:text="日期"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"

            />

        <TextView
            android:id="@+id/DateTextView_ID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/to_pick_view_background"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        >

        <TextView
            android:text="時段"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/StartTimeRadioButton_ID"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_background_selector"
                    android:textColor="@drawable/radio_button_text_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="出發時間"
                    android:textSize="16sp"
                    android:layout_margin="2dp"/>

                <RadioButton
                    android:id="@+id/ArriveRadioButton_ID"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_button_background_selector"
                    android:textColor="@drawable/radio_button_text_selector"
                    android:button="@android:color/transparent"
                    android:gravity="center"
                    android:text="抵達時間"
                    android:textSize="16sp"
                    android:layout_margin="2dp"
                    />
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/TimeStartTextView_ID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:text="00:00"
            android:gravity="center"
            android:textColor="#000000"/>

        <TextView
            android:text="至"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"/>

        <TextView
            android:id="@+id/TimeEndTextView_ID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:text="23:59"
            android:gravity="center"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        >

        <TextView
            android:text="車種"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/LocalRadioButton_ID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_background_selector"
                android:textColor="@drawable/radio_button_text_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="區間"
                android:textSize="14sp"
                android:layout_margin="5dp"/>

            <RadioButton
                android:id="@+id/TyRoKoRadioButton_ID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_background_selector"
                android:textColor="@drawable/radio_button_text_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="太魯閣"
                android:textSize="14sp"
                android:layout_margin="5dp"
                />

            <RadioButton
                android:id="@+id/ZiChanRadioButton_ID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_background_selector"
                android:textColor="@drawable/radio_button_text_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="自強號"
                android:textSize="14sp"
                android:layout_margin="5dp"/>

            <RadioButton
                android:id="@+id/ChuGuanRadioButton_ID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_background_selector"
                android:textColor="@drawable/radio_button_text_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="莒光號"
                android:textSize="14sp"
                android:layout_margin="5dp"/>

            <RadioButton
                android:id="@+id/FuShinRadioButton_ID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radio_button_background_selector"
                android:textColor="@drawable/radio_button_text_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:text="復興"
                android:textSize="16sp"
                android:layout_margin="5dp"/>

        </RadioGroup>


    </LinearLayout>

</LinearLayout>